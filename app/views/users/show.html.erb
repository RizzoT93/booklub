<%= render "shared/nav_search" %>

<div class="container">
  <h1>Welcome!</h1>
  <h3>You are reading <%= @book.title %> </h3>
  <div class="row">
    <p>How many pages have you read so far?</p>
    <p>87</p>

    <p>Here is your Book List:</p>
      <% current_user.list.bookmarks.each do |bookmark|%>
      <div class="card-product">
        <img src="<%= bookmark.book.img_book %>"/>
        <div class="card-product-infos">
          <h2><%= bookmark.book.title %></h2>
        </div>
      </div>
      <% end %>
  </div>
</div>
