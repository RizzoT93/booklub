<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-4">
      <%= simple_form_for [@book, @review] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your book",
        input_html: {data: {controller: "star-rating"}} %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
