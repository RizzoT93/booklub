<h1>Books</h1>

<div class="cards-index">
  <div class="container">
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-4">
          <%= link_to book_path(book) do %>
            <div class="cards-index" style="width: 18rem;">
              <img src= <%= display_img(book) %>, class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%= book.display_title %></h5>
                <p class="card-text"><%= book.author %></p>
                <a href="#" class="btn btn-primary">View</a>
              </div>
            </div>
          <%end%>
        </div>
      <%end%>
    </div>
  </div>
</div>
