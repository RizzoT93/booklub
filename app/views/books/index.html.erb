<h1>Books</h1>

<div class='container w-75 m-5 mx-auto'>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col mb-3 d-flex float-left">
        <%= link_to book_path(book) do %>
          <div class="card" style="width: 18rem">
            <%= cl_image_tag boat.photo.key, crop: :fill, class: "card-img-top cards-img" %>
            <div class="card-body">
              <h5 class="card-title"> <%= book.title %></h5>
              <p class="card-text"> <%= book.author %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
