<%= render "shared/nav_search" %>
<%= render "shared/navbar3" %>

<div class="container">
  <div class="card-book">
    <div class="row justify-content-center margin-txt">
      <div class="col-2 mt-3">
        <img src="<%= @book.img_book %>", style="width:100%; border-radius:5px; margin: 15px 0;"/>
      </div>
      <div class="col-6 mt-3">
        <div class="card-text" >
          <h2 class="text-center"><%= @book.title %></h2>
          <div class="d-flex justify-content-between" style="">
            <p class="text-center"><span style="color:#6E85B7">Author: </span> <%= @book.author %></p>
            <p class="text-center"><span style="color:#6E85B7">Number of pages: </span><%= @book.num_of_pages %></p>
          </div>
          <div class="d-flex justify-content-between" style="">
          <p class="text-center"><span style="color:#6E85B7">Category: </span><%= @book.category %></p>
          <p class="text-center"><span style="color:#6E85B7">Published Year: </span><%= @book.published_year %></p>
          </div>
          <p class="justify-content-center"><span style="color:#6E85B7">Description: </span><%= @book.description %></p>
        </div>
      </div>
      <div class="col-2 d-flex flex-column justify-content-center align-items-center">
        <%= simple_form_for [@book, @bookmarck] do |f| %>
          <%= f.submit "Add to my List", class:"btn button-colors-2", style:"background-color: #6E85B7;" %>
        <% end %>
        <div class="d-flex justify-content-center" style="font-size:29px;">
          <%= link_to new_book_review_path(@book) do %>
            <button type="button" class="btn btn-dark">Review</button>
          <%end %>
        </div>
        <div class="d-flex justify-content-center" style="font-size:29px;">
          <%= link_to chatroom_path(@chatroom) do %>
            <span style="color: #6E85B7;"><i class="fa-regular fa-comment"></i></span>
          <%end %>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <div class="">
      <div class="row justify-content-center">
        <% @book.reviews.each do |r| %>
          <div class="card-review col-10 m-3 p-3">
            <div class="d-flex justify-content-between">
              <p><span style="color:#6E85B7">User: </span><%= r.user.email %></p>
              <p><span style="color:#6E85B7">Rating: </span><%= "⭐️"*r.rating %></p>
            </div>
            <div class="">
              <p class=""><span style="color:#6E85B7">Comment: </span><%= r.comment %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
